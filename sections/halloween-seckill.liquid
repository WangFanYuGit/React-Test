<section class="halloween-sekill {{ section.id }}" data-animate_image="true">
  <ul class="flash_sale_products hide">
    {% for block in section.blocks %}
    {% liquid
      assign start_date = block.settings.start_date
      assign end_date = block.settings.end_date
      assign image = block.settings.image
      assign product_image = block.settings.product_image
      assign product = block.settings.product
      assign stock = block.settings.stock
      assign discount = block.settings.discount | append: '%'
      %}
    <li 
      data-discount="{{ discount }}"
      data-stock="{{ stock }}"
      data-handle="{{ product.handle }}"
      data-url="{{ product.url }}" 
      data-start-date="{{ start_date }}" 
      data-end-date="{{ end_date }}"
      data-image="{{ image | img_url : 'master' }}" 
      data-product_image="{{ product_image | img_url : 'master' }}" 
      data-title="{{ product.title }}"
      data-price-sale="{{ product.price | money }}"
      data-price-virtual="{{ product.compare_at_price | money }}"
      data-id="{{ product.selected_or_first_available_variant.id }}">
    </li>
    {% endfor %}
  </ul>

  <div class="flash_sale_wrap">
    <div class="page-width">
      <div class="flash_sale_logo">
        <img src="https://cdn.shopify.com/s/files/1/0556/4203/0246/files/1176.jpg?v=1632825360" alt="" class="mobile-hide lazyload">
        <img src="https://cdn.shopify.com/s/files/1/0556/4203/0246/files/1176152d4ec39c295040912f28f53517.jpg?v=1632905205" alt="" class="mobile-show lazyload">
      </div>
      <div class="product_count_time mobile-show">Time is Running Out -
        <span class="sale">00:20:30</span>
      </div>
      <div class="flash_sale_banner">
        <img src="" class="lazyload" alt="">
        <div class="flash_sale_label lazyload" data-animate_text="true">
          ONLY <span class="flash_sale_num bold">10 PCS</span> AVAILABLE
        </div>
        <div class="flash_sale_discount lazyload" data-animate_text="true">
          <img src="https://cdn.shopify.com/s/files/1/0512/3489/8105/files/7407b19336c84275a4cd043394698cce.png?v=1632903699" alt="" class="lazyload">
          <span class="flash_sale_discount_text bold">Save <span class="mobile-hide">Up to</span> <br > <span class="flash_sale_discount_percent">40%</span></span>
        </div>
      </div>
      <div class="product_info_wrap mobile-hide">
        <div class="flex_between">
          <div class="product_title bold"></div>
          <div class="product_price_wrap">
            <span class="product_price sale bold"></span>
            <span class="product_price virtual"></span>
          </div>
        </div>
        <div class="flex_between">
          <div class="product_count_time">Time is Running Out -
            <span class="sale">00:20:30</span>
          </div>
          <a href="" class="product_shop_now" target="_blank">Shop Now</a>
        </div>
      </div>
      <div class="product_info_wrap mobile-show">
        <div class="flex_between">
          <div class="product_title ellipsis bold"></div>
          <div>
            <div class="product_price_wrap">
              <span class="product_price sale bold"></span>
              <span class="product_price virtual"></span>
            </div>
            <a href="" class="product_shop_now" target="_blank">Shop Now</a>
          </div>
        </div>
      </div>
      <div class="flash_sale_swiper swiper-container">
        <div class="swiper-wrapper stop-swiping">

        </div>
        <div class="flash_sale_swiper_arrow">
          <div class="swiper-button-next swiper-button-black"></div>
          <div class="swiper-button-prev swiper-button-black"></div>
        </div>
      </div>
    </div>
  </div>

</section>
