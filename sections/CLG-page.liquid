{% liquid
  assign banner_img_pc = section.settings.banner_img_pc 
  assign banner_img_mb = section.settings.banner_img_mb 
  assign CLG_logo_pc = section.settings.CLG_logo_pc 
  assign CLG_logo_mb = section.settings.CLG_logo_mb 
  assign update_banner_pc = section.settings.update_banner_pc 
  assign update_banner_mb = section.settings.update_banner_mb 
  assign using_banner_pc = section.settings.using_banner_pc 
  assign using_banner_mb = section.settings.using_banner_mb 
  assign footer_banner_pc = section.settings.footer_banner_pc 
  assign footer_banner_mb = section.settings.footer_banner_mb 
%}
<section class="section_banner" data-animate_images="true">
  <img data-src="{{ banner_img_pc | img_url: 'master' }}" alt="{{ banner_img_pc.alt }}" class="mobile-hide lazyload">
  <img data-src="{{ banner_img_mb | img_url: 'master' }}" alt="{{ banner_img_mb.alt }}" class="mobile-show lazyload">
</section>


<section class="section_main page-width" data-animate_images="true">
  <div class="section_main_conetnt lazyload">
    <div class="CLG_logo_wrap">
      <img data-src="{{ CLG_logo_pc | img_url: 'master' }}" alt="{{ CLG_logo_pc.alt }}" class="mobile-hide lazyload">
      <img data-src="{{ CLG_logo_mb | img_url: 'master' }}" alt="{{ CLG_logo_mb.alt }}" class="mobile-show lazyload">
    </div>

    <div class="CLG_about_text page_sub_text" data-animate_text="true">
      <p>Since 2017, Govee has created cutting-edge LED lights and smart home devices that transform traditional ways of living. </p> 
      <p>Since 2010, Counter Logic Gaming (CLG) has made tremendous milestones in the growing and dedicated following of esports around the world. </p>
      <p>We are proudly partnering with CLG by outfitting their playerâ€™s spaces and performance center with Govee lighting products. Now, we are inviting our fellow gamers to help you create your modern and immersive game room. </p>
    </div>

    <div class="update_banner" >
      <img data-src="{{ update_banner_pc | img_url: 'master' }}" alt="{{ update_banner_pc.alt }}" class="mobile-hide lazyload">
      <img data-src="{{ update_banner_mb | img_url: 'master' }}" alt="{{ update_banner_mb.alt }}" class="mobile-show lazyload">
    </div>

    <div class="product_list row_2">
      {% for block in section.blocks %}
        {% if block.type == 'update_product' %}
          {% render 'CLG-product-template', product: block.settings.product %}
        {% endif %}
      {% endfor %}
    </div>

    <div class="using_banner">
      <img data-src="{{ using_banner_pc | img_url: 'master' }}" alt="{{ using_banner_pc.alt }}" class="mobile-hide lazyload">
      <img data-src="{{ using_banner_mb | img_url: 'master' }}" alt="{{ using_banner_mb.alt }}" class="mobile-show lazyload">
    </div>

    <div class="product_list row_4">
      {% for block in section.blocks %}
        {% if block.type == 'using_product' %}
          {% render 'CLG-product-template', product: block.settings.product %}
        {% endif %}
      {% endfor %}
    </div>

    <a href="/collections/all-products" class="CLG_view_all_product">VIEW ALL PRODUCTS</a>

    <div class="CLG_footer">
      <img data-src="{{ footer_banner_pc | img_url: 'master' }}" alt="{{ footer_banner_pc.alt }}" class="mobile-hide lazyload">
      <img data-src="{{ footer_banner_mb | img_url: 'master' }}" alt="{{ footer_banner_mb.alt }}" class="mobile-show lazyload">
    </div>
  </div>
</section>

<style>
  @media screen and (min-width: 569px) {
    .section_banner {
      min-height: 35vw;
    }
    .section_main_conetnt {
      padding-bottom: 4vw;
    }
    .CLG_logo_wrap {
      width: 24vw;
      margin: 5vw auto -3.5vw;
    }
    .CLG_about_text {
      margin-bottom: 4vw;
    }
    .CLG_about_text p {
      font-size: 1.3vw;
      color: #fff;
    }
    .CLG_view_all_product {
      color: #fff;
      text-align: center;
      text-decoration: underline;
      display: block;
      padding: 0 0 4vw;
    }
    .update_banner, .using_banner {
