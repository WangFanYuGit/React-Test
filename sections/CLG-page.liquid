      flex-direction: column;
    }

    .product_info {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      height: 100%;
    }
    .product_title {
      font-weight: bold;
      text-align: center;
    }
    .product_price_wrap {
      display: flex;
      align-items: center;
      justify-content: center;

      margin: .5vw auto;
    }
    .product_price_sale {
      font-weight: bold;
    }
    .product_price_virtual {
      font-size: 1.3vw;
      line-height: 1.8vw;
      color: #888;
      text-decoration: line-through;
    }
    .learn_more {
      text-align: center;
      color: #fff;
      background: url('https://cdn.shopify.com/s/files/1/0556/4203/0246/files/12_2x_2a8c90a0-a693-424f-a162-c950e770952e.png?v=1631673585') no-repeat;
      background-size: cover;
    }
  }
  @media screen and (max-width: 568px) {
    .section_main_conetnt {
      padding-bottom: 40px;
    }
    .CLG_logo_wrap {
      width: 100%;
      margin: 20px auto -60px;
    }
    .CLG_about_text {
      margin-bottom: 40px;
    }
    .CLG_about_text p {
      font-size: 13px;
      color: #fff;
    }
    .CLG_view_all_product {
      color: #fff;
      text-align: center;
      text-decoration: underline;
      display: block;
      font-size: 14px;
      padding: 0 0 40px;
    }
    .update_banner, .using_banner {
      margin-bottom: 20px;
    }
    .product_list {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }
    .product_list.row_2 {
      padding-bottom: 40px;
    }
    .product_list.row_4 {
      padding-bottom: 0;
    }
    .row_2 .product_item {
      width: 100%;
    }
    .row_4 .product_item {
      width: calc(50% - 10px);
      padding: 10px 10px 0;
    }
    .row_2 .product_title {
      font-size: 18px;
      line-height: 26px;
    }
    .row_4 .product_title {
      font-size: 12px;
      line-height: 14px;
    }
    .row_2 .product_info {
      padding: 20px;
    }
    .row_4 .product_info {
      padding: 10px 0 20px;
    }
    .row_2 .learn_more {
      font-size: 16px;
      width: 160px;
      line-height: 38px;
    }
    .row_4 .learn_more {
      font-size: 12px;
      width: 104px;
      line-height: 24px;
    }
    .row_2 .product_price_sale {
      font-size: 14px;
    }
    .row_4 .product_price_sale {
      font-size: 12px;
    }
    .product_item {
      background: #fff;
      margin-bottom: 20px;

      display: flex;
      flex-direction: column;
    }

    .product_info {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      height: 100%;
    }
    .product_title {
      font-weight: bold;
      text-align: center;
    }
    .product_price_wrap {
      display: flex;
      align-items: center;
      justify-content: center;

      margin: 5px auto;
    }
    .product_price_sale {
      font-weight: bold;
    }
    .product_price_virtual {
      font-size: 12px;
      line-height: 16px;
      color: #888;
      text-decoration: line-through;
    }
    .learn_more {
      text-align: center;
      color: #fff;
      background: url('https://cdn.shopify.com/s/files/1/0556/4203/0246/files/12_2x_2a8c90a0-a693-424f-a162-c950e770952e.png?v=1631673585') no-repeat;
      background-size: cover;
    }
  }
</style>



