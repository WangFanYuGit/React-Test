    <div class="question_item item-2" data-index="2">
      <div class="question_text">Installation</div>
      <div class="question_bar"></div>
    </div>
    <div class="question_item item-3" data-index="3">
      <div class="question_text">Specification</div>
      <div class="question_bar"></div>
