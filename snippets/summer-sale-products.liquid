            <div class="top_product_price_sale">{{ product_price_sale | prepend: currency }}</div>
            <div class="top_product_price_virtual">{{ product_price_virtual | prepend: currency }}</div>
          </div>
          <button class="top_learn_more">
            Shop Now
          </button>
        </div>
