<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

<script>
  var faq_swiper = new Swiper('#alluring-faq-content', {
    slidesPerView: '1',
    noSwiping : true,
    noSwipingClass : 'stop-swiping',
    effect : 'fade',
    fadeEffect: {
      crossFade: true,
    },
    on: {
      slideChange: function() {
        $('.question_item').removeClass('active');
        $(`.question_item.item-${this.activeIndex}`).addClass('active');
      }
    }
  });
  function setFaqBarColor(target) {
    $('.question_item').each((index, item)=> {
      $(item).removeClass('active')
      if ($(item).data('index') === target) {
        $(item).addClass('active')
      }
    })
  }
  $('.question_item').on('click',function () {
    let index = $(this).data('index');
    faq_swiper.slideTo(index, 500, setFaqBarColor(index))
  })

</script>