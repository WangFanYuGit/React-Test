<script>
  $(function () {
    // 当前活动商品信息
    let currentProduct = null; 
    let currentIndex = null;
    initActivity(); 
    // 从页面获取当前活动商品
    function initActivity() {
      // 获取折扣商品信息集合
      let products = $('.flash_sale_products li').map((index, item) => {
        return $(item).data()
      })
      if (products.length) {
        // 获取当前秒杀活动商品
        products.each((index, product) => {
          let nowDate = new Date().getTime();
          let startDate = new Date(product.startDate).getTime();
          let endDate = new Date(product.endDate).getTime();
          if (nowDate > startDate && nowDate < endDate) {
            currentProduct = product;
            currentIndex = index; //拿到当前活动的下标
          }
        })
        // 筛选掉当前进行中的活动，并且把所有的活动渲染到页面再初始化轮播图
        products.splice(currentIndex, 1)
        let swiper_content = '';
        products.each((index, product )=> {
          let nowDate = new Date().getTime();
          let startDate = new Date(product.startDate).getTime();
          let endDate = new Date(product.endDate).getTime();

          let activityClass = '',activityText = '';
          if (nowDate < startDate) {
            activityClass = 'product_shop_now sale_not_start';
            activityText = `October ${ new Date(startDate).getDate() } at 4 pm`;
          }else if (nowDate > endDate) {
            activityClass = 'sale_end';
            activityText = 'Event ends'
          }


          swiper_content += `
          <div class="swiper-slide ${ product.id }">
            <div class="product_wrap">
              <div class="product_img">
                <img data-src="https://${ product.product_image }" alt="" class="lazyload">
              </div>
              <div class="product_title ellipsis">${ product.title }</div>
              <div class="product_price_wrap">
                <span class="product_price sale bold">${ product.priceSale }</span>
                <span class="product_price virtual">${ product.priceVirtual }</span>
              </div>
              <div class="product_button ${ activityClass }">${ activityText }</div>
            </div>
          </div>
        `
        })
        $('.flash_sale_swiper .swiper-wrapper').html(swiper_content)
        const flash_sale_swiper = new Swiper('.flash_sale_swiper', {
          slidesPerView: window.isMobile ? '2' : '5',
          // effect : 'fade',
          noSwiping : true,
          noSwipingClass : 'stop-swiping',
          fadeEffect: {
            crossFade: true,
          },
          navigation: {
            nextEl: '.flash_sale_swiper_arrow .swiper-button-next',
            prevEl: '.flash_sale_swiper_arrow .swiper-button-prev'
          }
        });
        // 设置当前进行的活动信息
        if (currentProduct) {
          setProductInfo();
          countDown();
          loopGetProduct()
        }
      }else {
        // 隐藏flash sale
        $('.flash_sale_wrap').addClass('hide')
      }
    }
    function loopGetProduct() {
      let getTimer = setTimeout(()=> {
        getProduct().then(res=> {
          if (!res.available) {
            //设置按钮售罄样式
            $('.product_info_wrap a.product_shop_now').attr('disabled', true);
            $('.product_info_wrap a.product_shop_now').css({
              'background': '#E0E0E0',
              'pointer-events': 'none'
            });
            $('.product_info_wrap a.product_shop_now').html('Sold Out');
            clearTimeout(getTimer)
            return;
          }
          loopGetProduct()
        })
      },1000)
    }
    // 查询商品信息
    async function getProduct() {
      let url = `/products/${ currentProduct.handle }.js`;
      try {
        let response = await fetch(url)
        let data = await response.json()
        return data
      } catch (error) {
        console.log(error)
      }
    }
    // 设置商品信息
    function setProductInfo() {
      $('.flash_sale_banner > img').attr("src", currentProduct.image);
      $('.flash_sale_banner .flash_sale_num').html(currentProduct.stock + ' PCS');
      $('.flash_sale_banner .flash_sale_discount_percent').html(currentProduct.discount);
      $('.product_info_wrap .product_title').html(currentProduct.title);
      $('.product_info_wrap a.product_shop_now').attr('href',currentProduct.url);
      $('.product_info_wrap .product_price.sale').html(currentProduct.priceSale);
    }
    // 倒计时
    function countDown() {
      let nowTime = new Date();
      let endTime = new Date(currentProduct.endDate);
      let leftTime = parseInt((endTime.getTime() - nowTime.getTime()) / 1000);

      let d = addZero(parseInt(leftTime / (24 * 60 * 60)));
      let h = addZero(parseInt(leftTime / (60 * 60) % 24));
      let m = addZero(parseInt(leftTime / 60 % 60));
      let s = addZero(parseInt(leftTime % 60));

      document.querySelector(".product_count_time .sale").innerHTML = `${h}:${m}:${s}`;
      if (leftTime <= 0) {
        initActivity();
        return;
      }

      let timer = setTimeout(()=> {
        if (leftTime <=0) {
          clearTimeout(timer)
          return;
        }
        countDown()
      },1000)
    }
    // 时间加零
    function addZero(i) {
      return i < 10 ? '0' + i : i + '';
    }
    

  })
</script>




