        <div class="top_product_shop_box">
          <div class="top_product_price_wrap">
            <div class="top_product_price_sale">{{ product_price_sale | prepend: currency }}</div>
            <div class="top_product_price_virtual">{{ product_price_virtual | prepend: currency }}</div>
          </div>
          <button class="top_learn_more">
            Shop Now
          </button>
        </div>
      </div>
    </div>
  </a>
{% elsif forloop.index0 == 1 or forloop.index0 == 2 %}
  <a href="{{ product_url }}" target="_blank" rel="nofollow" class="top_product_wrap">
    <div class="top_product_bg">
