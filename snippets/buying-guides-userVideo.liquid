<section class="influencers_video_wrap">
  <div class="section_title">Influencer's Creation</div>
  <div class="user_video_list">
    {% for block in section.blocks %} {% if block.type == 'Influencers_Video' %}
    {% assign video = block.settings.video_url %} {% assign title =
    block.settings.video_title %} {% assign author = block.settings.video_author
    %} {% assign date = block.settings.video_date %} {% assign views =
    block.settings.video_views %}
    <div class="user_video_item">
      <div class="user_video_item_top" >
        <a class="item_thumbnail" href="{{ video }}" rel="nofollow">
          <img
            class="lazyload"
            data-src="{{
              video.id
                | prepend: 'https://i.ytimg.com/vi/'
                | append: '/hqdefault.jpg'
            }}"
            alt=""
          />
          <div class="play_mask">
            <div class="play_icon">
              <img
                class="lazyload"
                data-src="https://cdn.shopify.com/s/files/1/0556/4203/0246/files/1.png?v=1621587474"
                alt=""
              />
            </div>
          </div>
        </a>
      </div>
      <div class="user_video_item_bottom">
        <div class="video_title">{{ title }}</div>
        <div class="item_info">
          <span class="video_name">{{ author }}</span>
          <span class="video_date">{{ date }}</span>
        </div>
      </div>
    </div>
    {% endif %} {% endfor %}
  </div>
</section>
<section class="user_video_wrap">
  <div class="section_title">User's Creation</div>
  <div class="user_video_list">
    {% for block in section.blocks %} {% if block.type == 'User_Video' %} {%
    assign video = block.settings.video_url %} {% assign title =
    block.settings.video_title %} {% assign author = block.settings.video_author
    %} {% assign date = block.settings.video_date %} {% assign views =
    block.settings.video_views %}
    <div class="user_video_item">
      <div class="user_video_item_top">
        <a href="{{ video }}" rel="nofollow" target="_self">
          <video 
          id="video"
          style="object-fit: fill;width: 100%;"
          preload="metadata"
          muted
          x5-video-player-type="h5"
          webkit-playsinline
          type="webm"
          src="{{ video }}"></video>
          <div class="play_mask">
            <div class="play_icon">
              <img
                class="lazyload"
                data-src="https://cdn.shopify.com/s/files/1/0556/4203/0246/files/1.png?v=1621587474"
                alt=""
              />
            </div>
          </div>
        </a>
      </div>
      <div class="user_video_item_bottom">
        <div class="video_title">{{ title }}</div>
        <div class="item_info">
          <span class="video_name">{{ author }}</span>
          <span class="video_date">{{ date }}</span>
        </div>
      </div>
    </div>
    {% endif %} {% endfor %}
  </div>
</section>

<style>
  .user_video_list {
    display: flex;
    flex-wrap: wrap;
  }
  .user_video_item {
    width: 31%;
    margin-right: 1.3vw;
    margin-bottom: 2.5vw;
  }
  .user_video_item:nth-child(3) {
    margin-right: 0;
  }
  .video_title {
    color: #333;
    font-size: 1.125vw;
    padding: 1.125vw 0;
  }
  .user_video_item_top {
    position: relative;
  }
  .user_video_item_bottom {

  }
  .item_info {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    color: #737373;
    font-size: 0.7vw;
  }
  .video_date {
    margin: 0 1vw;
  }
  .section_title {
    font-size: 1.5vw;
    color: #333;
    padding-left: 1vw;
    padding-bottom: 2.25vw;
    font-weight: bold;
  }

  @media screen and (max-width: 767px) {
    .section_title {
      font-size: 18px;
      padding-left: 0;
      padding-bottom: 15px;
    }
    .user_video_item {
      width: 100%;
      margin-right: 0;
      margin-bottom: 15px;
    }
    .user_video_item_top {
      margin-right: 0;
      margin-bottom: 0;
      flex: 1;
      min-height: auto;
    }
    .user_video_item_bottom {
      flex: 1;
    }
    .video_title {
      font-size: 16px;
      padding: 5px 0 0 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      max-height: 70px;
      overflow: hidden;
    }
    .item_info {
      font-size: 12px;
    }
    .video_date {
      margin: 0 10px;
    }
  }
</style>
