<div class="swiper-container">
  <div class="swiper-wrapper slide">
    <div class="swiper-slide blue">Slide 1</div>
    <div class="swiper-slide grey">Slide 2</div>
    <div class="swiper-slide black">Slide 3</div>
    <div class="swiper-slide red">Slide 4</div>
    <div class="swiper-slide green">Slide 5</div>
    <div class="swiper-slide yellow">Slide 6</div>
    <div class="swiper-slide blue">Slide 7</div>
    <div class="swiper-slide black">Slide 8</div>
    <div class="swiper-slide green">Slide 9</div>
    <div class="swiper-slide red">Slide 10</div>
  </div>
  <!-- Add Pagination -->
  <!-- <div class="swiper-pagination"></div> -->
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script>
  window.onload = function () {
    var swiper = new Swiper('.swiper-container', {
      slidesPerView: 3,
      spaceBetween: 0,
      centeredSlides: true,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
    });
  }
</script>

<style>
  .swiper-slide {
    height: 200px;
    margin: 100px 0;
  }
  .blue {
    background: blue;
  }
  .green {
    background: green;
  }
  .red {
    background: red;
  }
  .black {
    background: pink;
  }
  .yellow {
    background: yellow;
  }
  .grey {
    background: greenyellow;
  }
  .swiper-slide {
    transform: scale(1);
    transition: 800ms;
    z-index: 8;
  }

  .swiper-slide::after {
    content: '';
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .3);
    position: absolute;
    left: 0;
    top: 0;
  }
  .swiper-slide-active {
    transform: scale(1.2);
    z-index: 9;
  }
  .swiper-slide-active::after {
    content: '';
    width: 100%;
    height: 100%;
    background: none;
    position: absolute;
    left: 0;
    top: 0;
  }
</style>
